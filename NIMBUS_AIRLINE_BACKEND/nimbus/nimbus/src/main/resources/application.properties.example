# ============================================
# FILE LOCATION: airline-backend/src/main/resources/application.properties.example
# This is a template file. Copy this to application.properties and update values
# ============================================

# ===========================
# Server Configuration
# ===========================
server.port=8080

# ===========================
# Database Configuration
# UPDATE THESE VALUES!
# ===========================
spring.datasource.url=jdbc:mysql://localhost:3306/airline_db
spring.datasource.username=YOUR_MYSQL_USERNAME
spring.datasource.password=YOUR_MYSQL_PASSWORD
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# ===========================
# JPA/Hibernate Configuration
# ===========================
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
spring.jpa.properties.hibernate.format_sql=true
spring.sql.init.mode=always

# ===========================
# Application Configuration
# ===========================
spring.application.name=Nimbus Airlines

# ===========================
# Error Handling
# ===========================
server.error.include-message=always
server.error.include-binding-errors=always

# ===========================
# Logging Configuration
# ===========================
logging.level.root=INFO
logging.level.com.airline.nimbus=DEBUG
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} - %msg%n

# ===========================
# File Upload Configuration
# ===========================
spring.servlet.multipart.enabled=true
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB